{
  "name": "louhen-landing",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "dev:tp": "next dev --turbopack",
    "prebuild": "npm run -w @louhen/design-tokens build",
    "postinstall": "npm run -w @louhen/design-tokens build",
    "prepare": "husky",
    "build": "next build",
    "start": "next start",
    "build:test": "cross-env NEXT_TELEMETRY_DISABLED=1 NODE_ENV=production npm run build",
    "start:test": "cross-env NODE_ENV=production NEXT_TELEMETRY_DISABLED=1 APP_BASE_URL=http://localhost:4311 NEXT_PUBLIC_SITE_URL=http://localhost:4311 HOST=127.0.0.1 PORT=4311 next start --hostname 127.0.0.1 --port 4311",
    "lint": "next lint",
    "guard:hex": "node scripts/guard-hex.mjs",
    "ci:color-policy": "node scripts/guard-hex.mjs --ci --report ci-artifacts/color-policy-report.txt",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "axe": "playwright test --grep @axe",
    "test:all": "npm run test:unit && npm run test:e2e",
    "i18n:check": "node scripts/check-i18n-placeholders.mjs",
    "qa:e2e": "playwright test",
    "qa:lh": "npm run lighthouse",
    "lighthouse": "node scripts/run-lighthouse.mjs",
    "test:axe": "npx playwright test --config playwright.config.ts --project accessibility",
    "qa": "start-server-and-test start http://localhost:3000 'npm run qa:e2e && npm run qa:lh'",
    "email:preview": "tsx scripts/email-preview.ts",
    "email:headers": "tsx scripts/email-headers-preview.ts",
    "release": "semantic-release",
    "i18n:method": "node scripts/check-method-i18n.mjs",
    "validate:core": "npm run lint && npm run i18n:method && npm run test:unit && npm run test:e2e && npm run test:axe && npm run lighthouse",
    "validate:sandbox": "SANDBOX_VALIDATION=1 PREVIEW_BASE_URL=https://staging.louhen.app NEXT_PUBLIC_ANALYTICS_DISABLED=1 NEXT_PUBLIC_ANALYTICS_DEBUG=0 NEXT_PUBLIC_METHOD_STICKY_CTA=true NEXT_PUBLIC_METHOD_EXIT_NUDGE=true DEFAULT_LOCALE=en npm run validate:core",
    "e2e:local": "cross-env NODE_ENV=test APP_BASE_URL=http://localhost:4311 TEST_E2E_SHORTCIRCUIT=true TEST_E2E_BYPASS_TOKEN=e2e-mocked-token HCAPTCHA_SECRET=sk_dummy_for_e2e playwright test --reporter=html --workers=2",
    "e2e:open": "npx playwright show-report",
    "pw:failures": "node scripts/summarize_playwright_failures.mjs",
    "validate:local": "bash scripts/validate-local.sh"
  },
  "dependencies": {
    "firebase-admin": "^13.5.0",
    "next": "15.5.3",
    "next-intl": "3.26.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "resend": "^6.1.0",
    "zod": "3.25.76",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@hcaptcha/react-hcaptcha": "^1.12.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.55.0",
    "@react-email/components": "^0.5.5",
    "@react-email/render": "^1.3.1",
    "@react-email/tailwind": "^1.2.2",
    "@semantic-release/changelog": "^6",
    "@semantic-release/commit-analyzer": "^12",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11",
    "@semantic-release/npm": "^12",
    "@semantic-release/release-notes-generator": "^14",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.19.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "patch-package": "^8.0.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.5.2",
    "semantic-release": "^24",
    "start-server-and-test": "^2.1.2",
    "tailwindcss": "^4.1.13",
    "tiny-invariant": "^1.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "undici": "^7.1.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,scss,md,mdx,html,json}": [
      "node scripts/guard-hex.mjs --"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "overrides": {}
}

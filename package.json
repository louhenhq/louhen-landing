{
  "name": "louhen-landing",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "dev:tp": "next dev --turbopack",
    "prebuild": "node scripts/check-fonts.mjs && npm run prebuild:design-tokens",
    "prebuild:design-tokens": "npm run -w @louhen/design-tokens build",
    "postinstall": "patch-package",
    "prepare": "husky",
    "build": "cross-env NEXT_DISABLE_FONT_DOWNLOADS=1 next build",
    "start": "next start",
    "start:test": "mkdir -p .next && cross-env NODE_ENV=production PORT=${PORT:-4311} HOST=0.0.0.0 next start -p ${PORT:-4311} -H 0.0.0.0 | tee .next/test-server.log",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "guard:hex": "node scripts/guard-hex.mjs",
    "ci:color-policy": "node scripts/guard-hex.mjs --ci --report ci-artifacts/color-policy-report.txt",
    "test": "npm run test:unit",
    "test:unit": "vitest run --passWithNoTests",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test --workers=1",
    "test:axe": "npx playwright test --config playwright.config.ts --project accessibility",
    "axe": "playwright test --grep @axe",
    "test:all": "npm run test:unit && npm run test:e2e",
    "i18n:check": "node scripts/check-i18n-placeholders.mjs",
    "qa:e2e": "playwright test",
    "qa:lh": "npm run lighthouse",
    "lighthouse": "node scripts/run-lighthouse.mjs",
    "qa": "start-server-and-test start http://localhost:3000 'npm run qa:e2e && npm run qa:lh'",
    "email:preview": "tsx scripts/email-preview.ts",
    "email:headers": "tsx scripts/email-headers-preview.ts",
    "release": "semantic-release",
    "e2e:local": "cross-env NODE_ENV=test APP_BASE_URL=http://localhost:4311 TEST_E2E_SHORTCIRCUIT=true TEST_E2E_BYPASS_TOKEN=e2e-mocked-token HCAPTCHA_SECRET=sk_dummy_for_e2e PLAYWRIGHT_ARTIFACTS_DIR=artifacts/playwright/local playwright test --workers=2",
    "e2e:open": "npx playwright show-report",
    "pw:failures": "node scripts/summarize_playwright_failures.mjs",
    "lhci": "node scripts/run-lighthouse.mjs",
    "validate:local": "node scripts/validate-local.mjs",
    "typecheck:build": "tsc -p tsconfig.build.json --noEmit",
    "typecheck:strict:feature": "tsc -p tsconfig.strict.json --noEmit",
    "typecheck:strict:method": "tsc -p tsconfig.strict.method.json --noEmit",
    "typecheck:tests": "tsc -p tsconfig.tests.json"
  },
  "engines": {
    "node": "22.x",
    "npm": "10.x"
  },
  "packageManager": "npm@10.8.1",
  "dependencies": {
    "firebase-admin": "^13.5.0",
    "next": "15.5.3",
    "next-intl": "3.26.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "resend": "^6.1.0",
    "zod": "3.25.76",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@hcaptcha/react-hcaptcha": "^1.12.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.55.0",
    "@react-email/components": "^0.5.5",
    "@react-email/render": "^1.3.1",
    "@react-email/tailwind": "^1.2.2",
    "@semantic-release/changelog": "^6",
    "@semantic-release/commit-analyzer": "^12",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11",
    "@semantic-release/npm": "^12",
    "@semantic-release/release-notes-generator": "^14",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.19.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.5.2",
    "patch-package": "^8.0.0",
    "semantic-release": "^24",
    "start-server-and-test": "^2.1.2",
    "tailwindcss": "^4.1.13",
    "tiny-invariant": "^1.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "undici": "^7.1.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,scss,md,mdx,html,json}": [
      "node scripts/guard-hex.mjs --"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "overrides": {}
}
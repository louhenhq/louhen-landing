rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny everything by default (tightest production posture).
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }

    // If you later need public reads (e.g., static content), scope them:
    // match /public/{doc=**} { allow read: if true; }
  }
}
